@using Microsoft.AspNetCore.Identity
@using EventPlanning.Infrastructure.Identity
@model EventPlanning.Application.DTOs.EventDetailsDto

@inject UserManager<User> UserManager

@{
    ViewData["Title"] = Model.Name;
    var currentUserId = UserManager.GetUserId(User);

    var isOrganizer = Model.OrganizerId == currentUserId;

    var isJoined = ViewBag.IsJoined as bool? ?? false;

    var capacity = Model.VenueCapacity;
    var guestsCount = Model.Guests?.Count ?? 0;
    var spotsLeft = capacity > 0 ? capacity - guestsCount : 999;
    var isFull = capacity > 0 && spotsLeft <= 0;

    var fillPercent = capacity > 0 ? (int)((double)guestsCount / capacity * 100) : 0;

    var isPast = Model.Date < DateTime.Now;
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-lg border-0 overflow-hidden">
        <div class="position-relative" style="height: 300px; background-color: #333;">
            @if (!string.IsNullOrEmpty(Model.VenueImageUrl))
            {
                <img src="@Model.VenueImageUrl" class="w-100 h-100" style="object-fit: cover; opacity: 0.8;"
                     alt="Venue">
            }
            else
            {
                <div class="w-100 h-100" style="background: linear-gradient(45deg, #4e54c8, #8f94fb);"></div>
            }

            <div class="position-absolute bottom-0 start-0 w-100 p-4"
                 style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);">
                <div>
                    @if (Model.IsPrivate)
                    {
                        <span class="badge bg-warning text-dark mb-2"><i
                                class="bi bi-lock-fill"></i> Private Event</span>
                    }
                    else
                    {
                        <span class="badge bg-success mb-2"><i class="bi bi-globe"></i> Public Event</span>
                    }
                    <h1 class="text-white display-5 fw-bold mb-0">@Model.Name</h1>
                    <p class="text-white-50 mb-0"><i class="bi bi-calendar-check"></i> @Model.Date.ToString("f")</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-lg-8">
                    <h5 class="text-uppercase text-muted fw-bold mb-3">About this event</h5>
                    <p class="lead">@Model.Description</p>

                    <hr class="my-4">

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="bi bi-geo-alt-fill fs-3 text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Venue</h6>
                                    <p class="mb-0">@Model.VenueName</p>
                                    @if (capacity > 0)
                                    {
                                        <small class="text-muted">Max capacity: @capacity</small>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="bi bi-person-circle fs-3 text-info"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Organizer</h6>
                                    <p class="mb-0">@ViewBag.OrganizerName</p>
                                    <small class="text-muted"><a href="mailto:@ViewBag.OrganizerEmail"
                                                                 class="text-decoration-none">@ViewBag.OrganizerEmail</a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="card bg-light border-0 rounded-3 p-3">

                        @if (capacity > 0)
                        {
                            <div class="d-flex justify-content-between mb-1">
                                <span class="small text-muted">Availability</span>
                                <span class="small fw-bold">@guestsCount / @capacity</span>
                            </div>
                            <div class="progress mb-3" style="height: 8px;">
                                <div class="progress-bar @(isFull ? "bg-danger" : "bg-success")" role="progressbar"
                                     style="width: @fillPercent%"></div>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            @if (isPast)
                            {
                                <button class="btn btn-secondary" disabled>Event Completed</button>

                                @if (isOrganizer)
                                {
                                    <div class="alert alert-info py-2 mb-0 text-center small">
                                        <i class="bi bi-info-circle"></i> Editing is disabled for past events.
                                    </div>
                                }
                            }
                            else if (isOrganizer)
                            {
                                <button class="btn btn-secondary" disabled>You are the Organizer</button>

                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                                        data-bs-target="#addGuestModal">
                                    <i class="bi bi-person-plus-fill"></i> Add Guest Manually
                                </button>

                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit
                                    Event</a>
                            }
                            else if (isJoined)
                            {
                                <button class="btn btn-success" disabled><i class="bi bi-check-lg"></i> You are going
                                </button>
                            }
                            else if (isFull)
                            {
                                <button class="btn btn-danger" disabled>Sold Out</button>
                            }
                            else
                            {
                                <form asp-action="Join" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">Join
                                        Event
                                    </button>
                                </form>
                            }
                        </div>

                        <div class="mt-4">
                            <h6 class="border-bottom pb-2 mb-3">Guest List <span
                                    class="badge bg-secondary rounded-pill float-end">@guestsCount</span></h6>
                            <div class="list-group list-group-flush bg-transparent">
                                @if (Model.Guests != null)
                                {
                                    @foreach (var guest in Model.Guests.Take(5))
                                    {
                                        <div class="list-group-item bg-transparent px-0 py-2 d-flex align-items-center">
                                            <div
                                                class="avatar bg-white border text-primary rounded-circle me-2 d-flex align-items-center justify-content-center"
                                                style="width: 30px; height: 30px; font-size: 12px;">
                                                @guest.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <small>@guest.FullName</small>
                                        </div>
                                    }

                                    @if (Model.Guests.Count > 5)
                                    {
                                        <div class="text-center mt-2">
                                            <small class="text-muted">and @(Model.Guests.Count - 5) more...</small>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>

@if (isOrganizer && !isPast)
{
    <div class="modal fade" id="addGuestModal" tabindex="-1" aria-labelledby="addGuestModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addGuestModalLabel">Add Guest Manually</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form asp-controller="Guest" asp-action="AddManually" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="EventId" value="@Model.Id"/>

                        <div class="row g-2 mb-3">
                            <div class="col">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input name="FirstName" class="form-control" required placeholder="John"/>
                            </div>
                            <div class="col">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input name="LastName" class="form-control" required placeholder="Doe"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input name="Email" type="email" class="form-control" required
                                       placeholder="guest@example.com"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input name="PhoneNumber" type="tel" class="form-control" placeholder="+1234567890"/>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Guest</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}