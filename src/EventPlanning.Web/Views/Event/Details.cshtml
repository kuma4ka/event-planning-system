@model EventPlanning.Application.DTOs.Event.EventDetailsDto

@{
    ViewData["Title"] = Model.Name;
    
    var guestItemViewData = new ViewDataDictionary(ViewData)
    {
        { "IsOrganizer", Model.IsOrganizer },
        { "IsPast", Model.IsPast }
    };
}

<div class="container py-4 animate-fade-in">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="event-hero">
        @if (!string.IsNullOrEmpty(Model.VenueImageUrl))
        {
            <img src="@Model.VenueImageUrl" class="event-hero-img" alt="Venue Image">
        }
        else
        {
            <div class="event-hero-img" style="background: linear-gradient(135deg, var(--color-air-force-blue), var(--color-dark-teal));"></div>
        }

        <div class="event-hero-overlay">
            <div class="container px-0">
                <div class="mb-2">
                    @if (Model.IsPrivate)
                    {
                        <span class="badge bg-warning text-dark me-2"><i class="bi bi-lock-fill"></i> Private</span>
                    }
                    else
                    {
                        <span class="badge bg-success me-2"><i class="bi bi-globe"></i> Public</span>
                    }
                    <span class="badge bg-light text-dark bg-opacity-75">@Model.Type.ToString()</span>
                </div>
                
                <h1 class="event-title">@Model.Name</h1>
                
                <div class="event-hero-meta">
                    <span><i class="bi bi-calendar-event me-2"></i> @Model.Date.ToString("dd MMMM yyyy")</span>
                    <span><i class="bi bi-clock me-2"></i> @Model.Date.ToString("HH:mm")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-8">
            <div class="mb-5">
                <h5 class="event-section-title">About this event</h5>
                <div class="event-description">
                    @Model.Description
                </div>
            </div>

            <div class="mb-5">
                <h5 class="event-section-title">Location & Venue</h5>
                <div class="d-flex align-items-start gap-3 mt-3">
                    <div class="bg-light rounded-circle p-3 text-danger">
                        <i class="bi bi-geo-alt-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-1">@Model.VenueName</h5>
                        <p class="text-muted mb-0">Check the map for directions.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            
            <div class="event-sidebar-card">
                @if (Model.VenueCapacity > 0)
                {
                    <div class="d-flex justify-content-between mb-2 small">
                        <span class="text-muted fw-bold text-uppercase">Availability</span>
                        <span class="fw-bold text-dark">@Model.GuestsCount / @Model.VenueCapacity</span>
                    </div>
                    <div class="progress progress-thin mb-4">
                        <div class="progress-bar progress-bar-custom @(Model.IsFull ? "full" : "")" 
                             role="progressbar" style="width: @Model.FillPercent%"></div>
                    </div>
                }

                <div class="action-buttons-grid">
                    @if (Model.IsPast)
                    {
                        <button class="btn btn-secondary w-100" disabled>Event Completed</button>
                        @if (Model.IsOrganizer)
                        {
                            <div class="text-center small text-muted mt-2">
                                <i class="bi bi-info-circle"></i> Past events cannot be edited.
                            </div>
                        }
                    }
                    else if (Model.IsOrganizer)
                    {
                        <div class="d-grid gap-2">
                            <button class="btn btn-secondary w-100" disabled>You are the Organizer</button>
                            
                            <button type="button" class="btn btn-outline-primary w-100" 
                                    data-bs-toggle="modal" data-bs-target="#addGuestModal">
                                <i class="bi bi-person-plus"></i> Add Guest
                            </button>
                            
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100">
                                <i class="bi bi-pencil-square"></i> Edit Event
                            </a>
                        </div>
                    }
                    else if (Model.IsJoined)
                    {
                        <button class="btn btn-success w-100" disabled>
                            <i class="bi bi-check-lg me-2"></i> You are going
                        </button>
                    }
                    else if (Model.IsFull)
                    {
                        <button class="btn btn-danger w-100" disabled>Sold Out</button>
                    }
                    else
                    {
                        <form asp-action="Join" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">
                                Join Event
                            </button>
                        </form>
                    }
                </div>
            </div>

            <div class="event-sidebar-card">
                <h6 class="event-section-title mb-3">Organizer</h6>
                <div class="organizer-info">
                    <div class="organizer-avatar">
                        @(!string.IsNullOrEmpty(ViewBag.OrganizerName as string) 
                            ? (ViewBag.OrganizerName as string)!.Substring(0, 1).ToUpper() 
                            : "U")
                    </div>
                    <div class="overflow-hidden">
                        <h6 class="fw-bold mb-0 text-truncate">@ViewBag.OrganizerName</h6>
                        <a href="mailto:@ViewBag.OrganizerEmail" class="text-decoration-none text-muted small text-truncate d-block">
                            @ViewBag.OrganizerEmail
                        </a>
                    </div>
                </div>
            </div>

            <div class="event-sidebar-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="event-section-title mb-0">Guest List</h6>
                    <span class="badge bg-light text-dark border">@Model.GuestsCount</span>
                </div>
                
                @if (Model.Guests is { Count: > 0 })
                {
                    <div class="mb-2">
                        @foreach (var guest in Model.Guests.Take(5))
                        {
                            <partial name="_GuestListItem" model="guest" view-data="guestItemViewData" />
                        }
                    </div>
                    
                    @if (Model.GuestsCount > 5)
                    {
                        <div class="text-center border-top pt-2">
                            <button class="btn btn-link btn-sm text-decoration-none text-muted fw-bold" 
                                    data-bs-toggle="modal" data-bs-target="#viewAllGuestsModal">
                                + @(Model.GuestsCount - 5) more guests
                            </button>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted small text-center py-3">Be the first to join!</p>
                }
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="viewAllGuestsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Guest List (@Model.GuestsCount)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (Model.Guests is { Count: > 0 })
                {
                    foreach (var guest in Model.Guests)
                    {
                        <partial name="_GuestListItem" model="guest" view-data="guestItemViewData" />
                    }
                }
            </div>
        </div>
    </div>
</div>

@if (Model is { IsOrganizer: true, IsPast: false })
{
    <div class="modal fade" id="addGuestModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Add Guest Manually</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form asp-controller="Guest" asp-action="AddManually" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="EventId" value="@Model.Id"/>

                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <label class="form-label small text-muted fw-bold">First Name</label>
                                <input name="FirstName" class="form-control" required placeholder="John"/>
                            </div>
                            <div class="col-6">
                                <label class="form-label small text-muted fw-bold">Last Name</label>
                                <input name="LastName" class="form-control" required placeholder="Doe"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold">Email</label>
                            <input name="Email" type="email" class="form-control" required placeholder="guest@example.com"/>
                        </div>
                        
                        <div class="row g-3 mb-3">
                            <div class="col-4">
                                <label class="form-label small text-muted fw-bold">Code</label>
                                <select name="CountryCode" class="form-select">
                                    @foreach (var country in EventPlanning.Application.Constants.CountryConstants.SupportedCountries)
                                    {
                                        <option value="@country.Code" selected="@(country.Code == EventPlanning.Application.Constants.CountryConstants.DefaultCode)">
                                            @country.DisplayValue
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-8">
                                <label class="form-label small text-muted fw-bold">Phone (digits only)</label>
                                <input name="PhoneNumber" class="form-control" placeholder="991234567" pattern="\d{7,15}"/>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0 pt-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Add Guest</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editGuestModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Edit Guest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <form asp-controller="Guest" asp-action="Edit" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="EventId" value="@Model.Id"/>
                        <input type="hidden" name="Id" id="editGuestId"/>

                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <label class="form-label small text-muted fw-bold">First Name</label>
                                <input name="FirstName" id="editGuestFirstName" class="form-control" required/>
                            </div>
                            <div class="col-6">
                                <label class="form-label small text-muted fw-bold">Last Name</label>
                                <input name="LastName" id="editGuestLastName" class="form-control" required/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold">Email</label>
                            <input name="Email" id="editGuestEmail" type="email" class="form-control" required/>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-4">
                                <label class="form-label small text-muted fw-bold">Code</label>
                                <select name="CountryCode" id="editGuestCountryCode" class="form-select">
                                    @foreach (var country in EventPlanning.Application.Constants.CountryConstants.SupportedCountries)
                                    {
                                        <option value="@country.Code">
                                            @country.DisplayValue
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-8">
                                <label class="form-label small text-muted fw-bold">Phone</label>
                                <input name="PhoneNumber" id="editGuestPhone" class="form-control" pattern="\d{7,15}"/>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0 pt-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteGuestModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-danger">Remove Guest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                
                <div class="modal-body">
                    <p class="mb-0">Are you sure you want to remove this guest from the list? This action cannot be undone.</p>
                </div>

                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    
                    <form asp-controller="Guest" asp-action="Remove" method="post">
                        <input type="hidden" name="EventId" value="@Model.Id" />
                        <input type="hidden" name="GuestId" id="deleteGuestId" />
                        <button type="submit" class="btn btn-danger px-4">Remove</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}