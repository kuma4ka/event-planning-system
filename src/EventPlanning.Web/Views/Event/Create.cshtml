@using EventPlanning.Domain.Enums
@model CreateEventDto

@{
    ViewData["Title"] = "Create Event";

    var eventTypes = Enum.GetValues<EventType>().Select(e => new SelectListItem
    {
        Value = e.ToString(),
        Text = e.GetDisplayName()
    });
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Create New Event</h2>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Event Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Ex: Tech Conference 2025"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label">Date & Time</label>
                        <input asp-for="Date" type="datetime-local" class="form-control"
                               value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm")"/>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label">Event Type</label>
                        <select asp-for="Type" class="form-select" asp-items="eventTypes">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VenueId" class="form-label">Venue (Optional)</label>
                        <select asp-for="VenueId" class="form-select" asp-items="@ViewBag.Venues">
                            <option value="0">-- Select a Venue (TBD) --</option>
                        </select>
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Create Event</button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}