@model EventPlanning.Application.DTOs.Guest.GuestBaseDto
@{
    var prefix = ViewData["Prefix"] as string ?? "guest";
}

<div class="row g-3 mb-3">
    <div class="col-6">
        <label for="@(prefix)FirstName" class="form-label small text-muted fw-bold">First Name</label>
        <input id="@(prefix)FirstName" name="FirstName" class="form-control" required placeholder="John"
            autocomplete="given-name" />
    </div>
    <div class="col-6">
        <label for="@(prefix)LastName" class="form-label small text-muted fw-bold">Last Name</label>
        <input id="@(prefix)LastName" name="LastName" class="form-control" required placeholder="Doe"
            autocomplete="family-name" />
    </div>
</div>
<div class="mb-3">
    <label for="@(prefix)Email" class="form-label small text-muted fw-bold">Email</label>
    <input id="@(prefix)Email" name="Email" type="email" class="form-control" required placeholder="guest@example.com"
        autocomplete="email" />
</div>
<div class="row g-3 mb-3">
    <div class="col-4">
        <label for="@(prefix)CountryCode" class="form-label small text-muted fw-bold">Code</label>
        <select id="@(prefix)CountryCode" name="CountryCode" class="form-select" autocomplete="tel-country-code" asp-items="ViewBag.Countries">
        </select>
    </div>
    <div class="col-8">
        <label for="@(prefix)Phone" class="form-label small text-muted fw-bold">Phone</label>
        <input id="@(prefix)Phone" name="PhoneNumber" class="form-control" placeholder="991234567"
            pattern="\d{7,15}" autocomplete="tel-local" />
    </div>
</div>
