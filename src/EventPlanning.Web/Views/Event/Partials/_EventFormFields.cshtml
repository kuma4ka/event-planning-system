@using EventPlanning.Web.Models
@using EventPlanning.Domain.Enums
@model EventFormViewModel

@{
    var dto = Model.IsEditMode ? (EventPlanning.Application.DTOs.Event.EventBaseDto)Model.UpdateDto! : Model.CreateDto!;
}

<div class="mb-4">
    <label class="st-form-label">Event Name</label>
    <div class="st-input-group">
        <span class="input-group-text"><i class="bi bi-card-heading"></i></span>
        @if (Model.IsEditMode)
        {
            <input asp-for="UpdateDto!.Name" class="form-control" placeholder="Ex: Tech Conference 2025" />
            <span asp-validation-for="UpdateDto!.Name" class="text-danger small mt-1 d-block"></span>
        }
        else
        {
            <input asp-for="CreateDto!.Name" class="form-control" placeholder="Ex: Tech Conference 2025" />
            <span asp-validation-for="CreateDto!.Name" class="text-danger small mt-1 d-block"></span>
        }
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6">
        <label class="st-form-label">Date & Time</label>
        <div class="st-input-group">
            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
             @if (Model.IsEditMode)
            {
                <input asp-for="UpdateDto!.Date" type="datetime-local" class="form-control"
                    min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" step="60" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="UpdateDto!.Date" class="text-danger small mt-1 d-block"></span>
            }
            else
            {
                <input asp-for="CreateDto!.Date" type="datetime-local" class="form-control"
                    min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" step="60" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="CreateDto!.Date" class="text-danger small mt-1 d-block"></span>
            }
        </div>
    </div>

    <div class="col-md-6">
        <label class="st-form-label">Event Type</label>
        <div class="st-input-group">
            <span class="input-group-text"><i class="bi bi-tag"></i></span>
             @if (Model.IsEditMode)
            {
                <select asp-for="UpdateDto!.Type" class="form-select" asp-items="Html.GetEnumSelectList<EventType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="UpdateDto!.Type" class="text-danger small mt-1 d-block"></span>
            }
            else
            {
                <select asp-for="CreateDto!.Type" class="form-select" asp-items="Html.GetEnumSelectList<EventType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="CreateDto!.Type" class="text-danger small mt-1 d-block"></span>
            }
        </div>
    </div>
</div>

<div class="mb-4">
    <label class="st-form-label">Venue (Optional)</label>
    <div class="st-input-group">
        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
         @if (Model.IsEditMode)
        {
            <select asp-for="UpdateDto!.VenueId" class="form-select" asp-items="@Model.Venues">
                <option value="">-- Select a Venue (TBD) --</option>
            </select>
            <span asp-validation-for="UpdateDto!.VenueId" class="text-danger small mt-1 d-block"></span>
        }
        else
        {
            <select asp-for="CreateDto!.VenueId" class="form-select" asp-items="@Model.Venues">
                <option value="">-- Select a Venue (TBD) --</option>
            </select>
            <span asp-validation-for="CreateDto!.VenueId" class="text-danger small mt-1 d-block"></span>
        }
    </div>
</div>

<div class="mb-4">
    <label class="st-form-label">Description</label>
    <div class="st-input-group align-top">
        <span class="input-group-text pt-3"><i class="bi bi-file-text"></i></span>
         @if (Model.IsEditMode)
        {
            <textarea asp-for="UpdateDto!.Description" class="form-control" rows="4"
                placeholder="Tell people what your event is about..."></textarea>
            <span asp-validation-for="UpdateDto!.Description" class="text-danger small mt-1 d-block"></span>
        }
        else
        {
            <textarea asp-for="CreateDto!.Description" class="form-control" rows="4"
                placeholder="Tell people what your event is about..."></textarea>
            <span asp-validation-for="CreateDto!.Description" class="text-danger small mt-1 d-block"></span>
        }
    </div>
</div>
