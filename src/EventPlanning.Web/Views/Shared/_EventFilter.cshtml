@using EventPlanning.Web.Models.Shared
@model EventFilterViewModel

@{
    var dateError = ViewData.ModelState["ToDate"]?.Errors.FirstOrDefault()?.ErrorMessage;
    var hasDateError = !string.IsNullOrEmpty(dateError);
}

<form method="get" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName"
    class="filter-floating-card @(Model.IsHeroOverlay ? "hero-overlay" : "")">
    <div class="card-body p-2">
        <!-- Preserve extra context for MyEvents -->
        @if (!string.IsNullOrEmpty(Model.ViewType))
        {
                <input type="hidden" name="viewType" value="@Model.ViewType" />
        }
        @if (!string.IsNullOrEmpty(Model.SortOrder))
        {
                <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
        }

        <div class="row g-2 align-items-center">

            @if (Model.ShowSearch)
            {
                    <!-- Search Input Column -->
                    <div class="col-12 col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0 text-muted ps-3">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" name="searchTerm" class="form-control border-0 text-muted"
                                placeholder="Search..." value="@Model.SearchTerm">
                        </div>
                    </div>
            }
            else
            {
                    <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />

                    <!-- Label Column -->
                    <div class="col-auto d-none d-lg-block px-3 border-end">
                        <span class="text-muted fw-bold small text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">
                            <i class="bi bi-sliders me-2"></i>Filter
                        </span>
                    </div>
            }

            <!-- Type Select -->
            <div class="col-12 col-md-2">
                <select name="type" class="form-select border-0 bg-light fw-medium" asp-items="Model.TypeOptions"
                    style="cursor: pointer;" onchange="this.form.submit()">
                </select>
            </div>

            <!-- Sort Select -->
            <div class="col-12 col-md-2">
                <select name="sortOrder" class="form-select border-0 bg-light fw-medium"
                    style="cursor: pointer;" onchange="this.form.submit()">
                    <!option value="date_desc" selected="@(Model.SortOrder == "date_desc" || string.IsNullOrEmpty(Model.SortOrder))">Date: Newest</!option>
                    <!option value="date_asc" selected="@(Model.SortOrder == "date_asc")">Date: Oldest</!option>
                    <!option value="name_asc" selected="@(Model.SortOrder == "name_asc")">Name: A-Z</!option>
                    <!option value="name_desc" selected="@(Model.SortOrder == "name_desc")">Name: Z-A</!option>
                </select>
            </div>

            <!-- From Date -->
            <div class="col-6 col-md-2">
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 text-muted ps-2">
                        <i class="bi bi-calendar-event"></i>
                    </span>
                    <input type="date" name="from" class="form-control border-0 text-muted ps-1"
                        value="@Model.From?.ToString("yyyy-MM-dd")" min="@Model.MinDate" title="From Date"
                        onchange="this.form.submit()">
                </div>
            </div>

            <!-- To Date -->
            <div class="col-6 col-md-2 position-relative">
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 text-muted ps-2">
                        <i class="bi bi-arrow-right"></i>
                    </span>
                    <input type="date" name="to"
                        class="form-control border-0 text-muted ps-1 @(hasDateError ? "is-invalid" : "")"
                        value="@Model.To?.ToString("yyyy-MM-dd")" min="@Model.MinDate" title="To Date"
                        onchange="this.form.submit()">
                </div>

                @if (hasDateError)
                {
                        <div class="position-absolute start-0 top-100 mt-2 p-2 rounded shadow-lg bg-white border-start border-4 border-danger"
                            style="z-index: 1050; min-width: 100%; width: max-content; max-width: 250px;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-circle-fill text-danger me-2 fs-5"></i>
                                <span class="text-dark fw-bold" style="font-size: 0.8rem; line-height: 1.2;">
                                @dateError
                                </span>
                            </div>
                            <div class="position-absolute top-0 start-50 translate-middle-x"
                                style="width: 0; height: 0; border-left: 6px solid transparent; border-right: 6px solid transparent; border-bottom: 6px solid white; margin-top: -6px;">
                            </div>
                        </div>
                }
            </div>

            <!-- Clear/Status Column -->
            <div class="col-12 col-md text-end">
                @if (Model.HasFilters)
                {
                        <a asp-controller="@Model.ControllerName" asp-action="@Model.ActionName"
                            asp-route-viewType="@Model.ViewType"
                            class="btn btn-link text-danger text-decoration-none fw-bold small">
                            <i class="bi bi-x-circle me-1"></i> Clear
                        </a>
                }
                else
                {
                        <span class="text-muted small fst-italic me-3" style="font-size: 0.85rem;">Showing all events</span>
                }
            </div>
        </div>
    </div>
</form>
