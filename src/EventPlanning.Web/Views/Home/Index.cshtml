@using EventPlanning.Application.Models
@using EventPlanning.Application.DTOs
@using EventPlanning.Domain.Enums
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@model PagedResult<EventDto>

@{
    ViewData["Title"] = "Find Events";

    var eventTypes = Enum.GetValues<EventType>().Select(e =>
    {
        var field = e.GetType().GetField(e.ToString());
        var attribute = field?.GetCustomAttribute<DisplayAttribute>();
        return new SelectListItem
        {
            Value = e.ToString(),
            Text = attribute?.Name ?? e.ToString(),
            Selected = Context.Request.Query["type"] == e.ToString()
        };
    });

    var currentSearch = Context.Request.Query["searchTerm"];
    var currentFrom = Context.Request.Query["from"];
    var currentTo = Context.Request.Query["to"];
    var currentType = Context.Request.Query["type"];

    var hasFilters = !string.IsNullOrEmpty(currentSearch)
                     || !string.IsNullOrEmpty(currentType)
                     || !string.IsNullOrEmpty(currentFrom)
                     || !string.IsNullOrEmpty(currentTo);
}

<div class="container">
    <div class="hero-stanza-container">

        <div class="hero-visual-right">
            <div class="position-absolute w-100 h-100"
                 style="background-image: url('https://www.transparenttextures.com/patterns/stardust.png'); opacity: 0.1;"></div>

            <img src="/images/stanza-mark.svg" alt="Abstract Stanza Mark" class="stanza-giant-mark">

            <div class="position-absolute top-0 end-0 bg-info rounded-circle opacity-25"
                 style="width: 300px; height: 300px; filter: blur(100px); transform: translate(30%, -30%);"></div>
        </div>

        <div class="hero-content-left">
            <h1 class="hero-title-poetic">
                Find your space.<br>
                Write your <span class="hero-title-accent">verse.</span>
            </h1>

            <p class="hero-subtitle">
                Discover curated events where intelligent structure meets <br class="d-none d-lg-block">
                serendipitous connection.
            </p>

            <div class="d-flex gap-3 align-items-center">
                <a href="#events-grid" class="btn btn-light px-4 py-2 fw-bold border-0 shadow-sm" style="color: var(--color-dark-teal);">
                    Start Exploring
                </a>
                <span class="text-white-50 small ms-2 d-none d-md-inline">
                    <i class="bi bi-arrow-down me-1"></i> Scroll for events
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5" id="events-grid">
    <form method="get" asp-action="Index" class="filter-floating-card">
        <div class="card-body p-2">
            <input type="hidden" name="searchTerm" value="@currentSearch"/>

            <div class="row g-2 align-items-center">

                <div class="col-auto d-none d-lg-block px-3 border-end">
                    <span class="text-muted fw-bold small text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">
                        <i class="bi bi-sliders me-2"></i>Filter
                    </span>
                </div>

                <div class="col-12 col-md-3">
                    <select name="type" class="form-select border-0 bg-light fw-medium" asp-items="eventTypes"
                            style="cursor: pointer;" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 text-muted ps-3"><i class="bi bi-calendar-event"></i></span>
                        <input type="date" name="from" class="form-control border-0 text-muted"
                               value="@currentFrom" title="From Date" onchange="this.form.submit()">
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 text-muted ps-3"><i class="bi bi-arrow-right"></i></span>
                        <input type="date" name="to" class="form-control border-0 text-muted"
                               value="@currentTo" title="To Date" onchange="this.form.submit()">
                    </div>
                </div>

                <div class="col-12 col-md text-end">
                    @if (hasFilters)
                    {
                        <a asp-action="Index" class="btn btn-link text-danger text-decoration-none fw-bold small">
                            <i class="bi bi-x-circle me-1"></i> Clear
                        </a>
                    }
                    else
                    {
                        <span class="text-muted small fst-italic me-3" style="font-size: 0.85rem;">Showing all events</span>
                    }
                </div>
            </div>
        </div>
    </form>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-search display-1 text-muted opacity-25"></i>
            </div>
            <h3 class="text-dark">No events found</h3>
            <p class="text-muted">Try adjusting your filters or search criteria.</p>
            <a asp-action="Index" class="btn btn-outline-primary mt-2">Clear All Filters</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
            <h4 class="mb-0 fw-bold display-6" style="color: var(--color-ink-black); font-size: 1.75rem;">Upcoming Events</h4>
            <span class="badge bg-white text-dark border shadow-sm px-3 py-2"
                  style="border-radius: 8px !important; color: var(--color-dark-teal) !important;">
                    @Model.TotalCount results
            </span>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            @foreach (var item in Model.Items)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-effect transition-transform border-0 bg-white">
                        <div class="position-relative" style="height: 220px; overflow: hidden; background-color: #f0f2f5;">
                            @if (!string.IsNullOrEmpty(item.VenueImageUrl))
                            {
                                <img src="@item.VenueImageUrl" class="card-img-top w-100 h-100"
                                     style="object-fit: cover;" alt="@item.Name">
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center text-white"
                                     style="background: linear-gradient(135deg, var(--color-dark-teal), var(--color-air-force-blue));">
                                    <i class="bi bi-calendar-event fs-1 opacity-50"></i>
                                </div>
                            }

                            <span class="position-absolute top-0 end-0 m-3 badge bg-white text-dark shadow-sm">
                                @item.Type
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <div class="text-uppercase fw-bold small mb-2" style="color: var(--color-air-force-blue); letter-spacing: 0.5px;">
                                <i class="bi bi-calendar3 me-1"></i> @item.Date.ToString("MMM dd, yyyy • HH:mm")
                            </div>

                            <h5 class="card-title fw-bold mb-2 fs-5">
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id"
                                   class="text-decoration-none text-dark stretched-link">
                                    @item.Name
                                </a>
                            </h5>

                            <p class="card-text text-muted small mb-3 flex-grow-1" style="line-height: 1.6;">
                                @(item.Description?.Length > 100 ? item.Description.Substring(0, 97) + "..." : item.Description)
                            </p>

                            <div class="d-flex align-items-center text-muted small pt-3 border-top mt-auto"
                                 style="border-color: #f0f2f5 !important;">
                                <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                                <span class="text-truncate">@item.VenueName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-4">
                <ul class="pagination shadow-sm">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.PageNumber - 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-type="@currentType"
                           asp-route-from="@currentFrom"
                           asp-route-to="@currentTo">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link border-0" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchTerm="@currentSearch"
                               asp-route-type="@currentType"
                               asp-route-from="@currentFrom"
                               asp-route-to="@currentTo">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.PageNumber + 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-type="@currentType"
                           asp-route-from="@currentFrom"
                           asp-route-to="@currentTo">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<style>
    .hover-effect {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .hover-effect:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1) !important;
    }

    .page-link {
        color: var(--color-dark-teal);
        background-color: #fff;
        margin: 0 4px;
        border-radius: 8px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
    }

    .page-item.active .page-link {
        background-color: var(--color-dark-teal);
        border-color: var(--color-dark-teal);
        color: white;
        box-shadow: 0 4px 10px rgba(18, 69, 89, 0.3);
    }

    .page-link:hover {
        background-color: #eef2f6;
        color: var(--color-dark-teal);
    }
</style>