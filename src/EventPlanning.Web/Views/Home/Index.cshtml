@using EventPlanning.Application.DTOs
@model List<EventDto>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Upcoming Events</h1>
        <a asp-action="Create" class="btn btn-primary">Create Event</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No events found. Be the first to create one!</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                        @item.Name
                                    </a>
                                </h5>
                                <span class="badge bg-secondary">@item.Type</span>
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Date.ToString("g")</h6>
                            <p class="card-text mt-3">@item.Description</p>
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <strong>Venue:</strong> @item.VenueName
                                </small>

                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        Edit
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete the event \'@item.Name\'?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>