@using EventPlanning.Application.Models
@using EventPlanning.Application.DTOs
@using EventPlanning.Domain.Enums
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@model PagedResult<EventDto>

@{
    ViewData["Title"] = "Find Events";

    var eventTypes = Enum.GetValues<EventType>().Select(e =>
    {
        var field = e.GetType().GetField(e.ToString());
        var attribute = field?.GetCustomAttribute<DisplayAttribute>();
        return new SelectListItem
        {
            Value = e.ToString(),
            Text = attribute?.Name ?? e.ToString(),
            Selected = Context.Request.Query["type"] == e.ToString()
        };
    });

    var currentSearch = Context.Request.Query["searchTerm"];
    var currentFrom = Context.Request.Query["from"];
    var currentTo = Context.Request.Query["to"];
    var currentType = Context.Request.Query["type"];

    var hasFilters = !string.IsNullOrEmpty(currentSearch)
                     || !string.IsNullOrEmpty(currentType)
                     || !string.IsNullOrEmpty(currentFrom)
                     || !string.IsNullOrEmpty(currentTo);
}

<div class="hero-gradient-ocean text-center py-5 rounded-3 position-relative overflow-hidden mb-4">
    <div class="position-absolute top-0 start-0 w-100 h-100 opacity-25"
         style="background-image: url('https://www.transparenttextures.com/patterns/cubes.png'); z-index: 0; pointer-events: none;"></div>

    <div class="container position-relative" style="z-index: 10;">
        <h1 class="display-4 fw-bold mb-2">Discover Amazing Events</h1>
        <p class="lead mb-0 text-white-50 fw-medium">Join the community and find the perfect event for you.</p>
    </div>
</div>

<div class="container mb-5">

    <form method="get" asp-action="Index" class="card shadow-sm border-0 mb-5 p-1"
          style="border-radius: 12px; background-color: #fff;">
        <div class="card-body p-2">
            <input type="hidden" name="searchTerm" value="@currentSearch"/>

            <div class="row g-2 align-items-center">

                <div class="col-auto d-none d-lg-block px-3 border-end">
                    <span class="text-muted fw-bold small text-uppercase"><i
                            class="bi bi-sliders me-2"></i>Filter By</span>
                </div>

                <div class="col-12 col-md-3">
                    <select name="type" class="form-select border-0 bg-light fw-medium" asp-items="eventTypes"
                            style="cursor: pointer;" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-calendar-event"></i></span>
                        <input type="date" name="from" class="form-control border-0 text-muted"
                               value="@currentFrom" title="From Date" onchange="this.form.submit()">
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 text-muted"><i
                                class="bi bi-arrow-right"></i></span>
                        <input type="date" name="to" class="form-control border-0 text-muted"
                               value="@currentTo" title="To Date" onchange="this.form.submit()">
                    </div>
                </div>

                <div class="col-12 col-md text-end">
                    @if (hasFilters)
                    {
                        <a asp-action="Index" class="btn btn-link text-danger text-decoration-none fw-bold small">
                            <i class="bi bi-x-circle me-1"></i> Clear Filters
                        </a>
                    }
                    else
                    {
                        <span class="text-muted small fst-italic me-2">Showing all events</span>
                    }
                </div>
            </div>
        </div>
    </form>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-search display-1 text-muted opacity-25"></i>
            </div>
            <h3 class="text-dark">No events found</h3>
            <p class="text-muted">Try adjusting your filters or search criteria.</p>
            <a asp-action="Index" class="btn btn-outline-primary mt-2">Clear All Filters</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 fw-bold" style="color: var(--color-ink-black);">Upcoming Events</h4>
            <span class="badge rounded-pill bg-white text-dark border shadow-sm px-3 py-2">
                @Model.TotalCount results
            </span>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            @foreach (var item in Model.Items)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-effect transition-transform border-0">
                        <div class="position-relative" style="height: 200px; overflow: hidden; background-color: #eee;">
                            @if (!string.IsNullOrEmpty(item.VenueImageUrl))
                            {
                                <img src="@item.VenueImageUrl" class="card-img-top w-100 h-100"
                                     style="object-fit: cover;" alt="@item.Name">
                            }
                            else
                            {
                                var hue = item.Id * 50 % 360;
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center text-white"
                                     style="background: linear-gradient(45deg, var(--color-dark-teal), var(--color-air-force-blue));">
                                    <i class="bi bi-calendar-event fs-1 opacity-50"></i>
                                </div>
                            }

                            <span class="position-absolute top-0 end-0 m-3 badge bg-white text-dark shadow-sm">
                                @item.Type
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column bg-white">
                            <div class="text-uppercase fw-bold small mb-2" style="color: var(--color-dark-teal);">
                                <i class="bi bi-calendar3 me-1"></i> @item.Date.ToString("MMM dd, yyyy • HH:mm")
                            </div>

                            <h5 class="card-title fw-bold mb-2">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="text-decoration-none text-dark stretched-link">
                                    @item.Name
                                </a>
                            </h5>

                            <p class="card-text text-muted small mb-3 flex-grow-1">
                                @(item.Description?.Length > 100 ? item.Description.Substring(0, 97) + "..." : item.Description)
                            </p>

                            <div class="d-flex align-items-center text-muted small pt-3 border-top mt-auto"
                                 style="border-color: var(--color-ash-grey) !important;">
                                <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                                <span class="text-truncate">@item.VenueName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-4">
                <ul class="pagination shadow-sm">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.PageNumber - 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-type="@currentType"
                           asp-route-from="@currentFrom"
                           asp-route-to="@currentTo">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link border-0" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchTerm="@currentSearch"
                               asp-route-type="@currentType"
                               asp-route-from="@currentFrom"
                               asp-route-to="@currentTo">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.PageNumber + 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-type="@currentType"
                           asp-route-from="@currentFrom"
                           asp-route-to="@currentTo">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(1, 22, 30, 0.15) !important;
    }

    .page-link {
        color: var(--color-dark-teal);
        background-color: #fff;
        margin: 0 2px;
        border-radius: 4px;
    }

    .page-item.active .page-link {
        background-color: var(--color-dark-teal);
        border-color: var(--color-dark-teal);
        color: white;
    }

    input[type="date"]::-webkit-inner-spin-button,
    input[type="date"]::-webkit-calendar-picker-indicator {
        /* opacity: 0.5; cursor: pointer; */
    }
</style>