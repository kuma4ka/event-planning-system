@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center animate-fade-in">
        <div class="access-denied-icon">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        
        <h1 class="display-5 fw-bold text-dark mb-3">Access Restricted</h1>
        
        <p class="lead text-muted mb-5" style="max-width: 500px; margin: 0 auto;">
            We're sorry, but you don't have the necessary permissions to view this page. 
            If you believe this is an error, please contact support.
        </p>
        
        <div class="d-flex gap-3 justify-content-center">
            <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left me-2"></i> Go Back
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                Go Home <i class="bi bi-house-door ms-2"></i>
            </a>
        </div>
    </div>
</div>