@using EventPlanning.Application.DTOs.Auth
@model RegisterUserDto

@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card wide animate-fade-in">
        <div class="auth-header">
            <h2 class="auth-title">Join Stanza</h2>
            <p class="auth-subtitle">Create an account to host and join events</p>
        </div>

        <div class="auth-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 mb-4 small"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="auth-form-label">First Name</label>
                        <div class="input-group auth-icon-input">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="FirstName" class="form-control" placeholder="John" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <label asp-for="LastName" class="auth-form-label">Last Name</label>
                        <div class="input-group auth-icon-input">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="LastName" class="form-control" placeholder="Doe" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="auth-form-label">Email Address</label>
                    <div class="input-group auth-icon-input">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="Password" class="auth-form-label">Password</label>
                        <div class="input-group auth-icon-input">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <label asp-for="ConfirmPassword" class="auth-form-label">Confirm</label>
                        <div class="input-group auth-icon-input">
                            <span class="input-group-text"><i class="bi bi-check-lg"></i></span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        Create Account
                    </button>
                </div>
            </form>

            <div class="auth-footer">
                <p>Already a member? <a asp-action="Login">Log in here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }