@{
    ViewData["Title"] = "Register confirmation";
    var email = ViewBag.Email ?? "your email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="st-card text-center py-5">
                <div class="mb-4 text-primary">
                    <i class="bi bi-envelope-paper-heart" style="font-size: 4rem;"></i>
                </div>
                <h2 class="fw-bold mb-3">Check Your Email</h2>
                <p class="text-muted mb-4 lead">
                    We've sent a confirmation link to <strong style="color: var(--text-main);">@email</strong>.
                    <br>Please check your inbox to activate your account.
                </p>
                <div class="d-grid gap-2 col-8 mx-auto">
                    <a href="/" class="btn btn-outline-secondary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
