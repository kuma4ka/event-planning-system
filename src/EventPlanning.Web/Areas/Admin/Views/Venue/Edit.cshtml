@model EventPlanning.Application.DTOs.Venue.UpdateVenueDto

@{
    ViewData["Title"] = "Edit Venue";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CurrentImageUrl" />

                <div class="card c-admin-card">

                    <div class="c-admin-header">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-pencil-square fs-4 me-3 text-white"></i>
                            <div>
                                <h5 class="mb-0 fw-bold text-white">Edit Venue</h5>
                                <small class="text-white-50">@Model.Name</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="c-admin-form-label">Venue Name</label>
                            <div class="c-admin-input-group">
                                <i class="bi bi-building c-admin-input-icon"></i>
                                <input asp-for="Name" class="form-control c-admin-input" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-4">
                                <label asp-for="Address" class="c-admin-form-label">Address</label>
                                <div class="c-admin-input-group">
                                    <i class="bi bi-geo-alt c-admin-input-icon"></i>
                                    <input asp-for="Address" class="form-control c-admin-input" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                            </div>
                            
                            <div class="col-md-4 mb-4">
                                <label asp-for="Capacity" class="c-admin-form-label">Capacity</label>
                                <div class="c-admin-input-group">
                                    <i class="bi bi-people c-admin-input-icon"></i>
                                    <input asp-for="Capacity" class="form-control c-admin-input" type="number" />
                                </div>
                                <span asp-validation-for="Capacity" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="c-admin-form-label">Update Image</label>

                            @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.CurrentImageUrl" alt="Current Venue Image"
                                         class="img-thumbnail" style="max-height: 150px; border-radius: 8px;" />
                                    <div class="small text-muted mt-1">Current Image</div>
                                </div>
                            }

                            <div class="c-admin-input-group">
                                <i class="bi bi-image c-admin-input-icon"></i>
                                <input asp-for="ImageFile" type="file" class="form-control c-admin-input" accept="image/*" />
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="c-admin-form-label">Description</label>
                            <div class="c-admin-input-group">
                                <i class="bi bi-text-paragraph c-admin-input-icon" style="top: 1.5rem;"></i>
                                <textarea asp-for="Description" class="form-control c-admin-input" rows="4"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-muted ps-0">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                                Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}