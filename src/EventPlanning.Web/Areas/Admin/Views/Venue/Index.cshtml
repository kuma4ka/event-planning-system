@model IEnumerable<EventPlanning.Application.DTOs.Venue.VenueDto>

@{
    ViewData["Title"] = "Manage Venues";
}

<div class="container py-5">

    <div class="card c-admin-card">

        <div class="c-admin-header">
            <div class="d-flex align-items-center">
                <i class="bi bi-building-gear fs-3 me-3"></i>
                <div>
                    <h4 class="mb-0 fw-bold">Manage Venues</h4>
                    <small class="opacity-75">Overview of all platform locations</small>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-light text-dark fw-bold shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Create New Venue
            </a>
        </div>

        <div class="table-responsive">
            <table class="table c-admin-table mb-0">
                <thead>
                <tr>
                    <th class="ps-4">Name</th>
                    <th>Address</th>
                    <th>Capacity</th>
                    <th class="text-center pe-4">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold align-middle">
                            @venue.Name
                            @if (!string.IsNullOrEmpty(venue.ImageUrl))
                            {
                                <i class="bi bi-image text-muted ms-2" title="Has image"></i>
                            }
                        </td>
                        <td class="align-middle">
                            <i class="bi bi-geo-alt text-muted me-1"></i> @(venue.Address ?? "N/A")
                        </td>
                        <td class="align-middle">
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-people me-1"></i> @venue.Capacity
                            </span>
                        </td>
                        <td class="text-center pe-4 align-middle">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@venue.Id" class="c-action-btn" title="Edit">
                                    <i class="bi bi-pencil-fill" style="font-size: 0.9rem;"></i>
                                </a>

                                <button type="button"
                                        class="c-action-btn text-danger border-0"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-venue-id="@venue.Id"
                                        data-venue-name="@venue.Name"
                                        title="Delete">
                                    <i class="bi bi-trash-fill" style="font-size: 0.9rem;"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                </div>
                <h5 class="text-muted">No venues found</h5>
                <p class="text-muted small">Get started by creating a new venue.</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true"
     data-url-template='@Url.Action("Delete", "Venue", new { area = "Admin", id = "PLACEHOLDER" })'>

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 overflow-hidden rounded-4">

            <div class="c-danger-header py-4">
                <i class="bi bi-exclamation-triangle c-danger-icon mb-2"></i>
                <h5 class="fw-bold mb-0">Delete Venue?</h5>
                <p class="mb-0 opacity-75 small">This action cannot be undone.</p>
            </div>

            <div class="modal-body p-4 text-center">
                <p class="text-muted mb-4">
                    Are you sure you want to permanently remove <br />
                    <strong class="text-dark fs-5" id="modalVenueName">Venue Name</strong>?
                </p>

                <div class="d-flex gap-2 justify-content-center">
                    <button type="button" class="btn btn-light flex-grow-1 py-2 text-muted fw-bold" data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <form id="deleteForm" method="post" class="flex-grow-1">
                        <button type="submit" class="btn btn-danger w-100 py-2 fw-bold">
                            Yes, Delete It
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}